<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrainingDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrainingDiary"
    Shell.FlyoutBehavior="Flyout"
    Title="TrainingDiary">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Diary"
        ContentTemplate="{DataTemplate local:Diary}"
        Route="Diary" />

    <ShellContent
        Title="Workout Planning"
        ContentTemplate="{DataTemplate local:WorkoutPlanning}"
        Route="WorkoutPlanning" />

    <ShellContent
        Title="Progress Tracking"
        ContentTemplate="{DataTemplate local:ProgressTracking}"
        Route="ProgressTracking"/>

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings"/>

</Shell>
